<% layout('layouts/boilerplate')%>

<h1>All Estates</h1>
<div>
    <a href="/estates/new">Add Estate</a>
</div>
<% for (let estate of estates){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=estate.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= estate.title %> </h5>
                <p class="card-text"><%= estate.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= estate.location%></small>
                </p>
                <a class="btn btn-primary" href="/estates/<%=estate._id%>">View <%=estate.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>