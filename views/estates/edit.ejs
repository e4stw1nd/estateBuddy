<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit estate</h1>
    <div class="col-6 offset-3">
        <form action="/estates/<%=estate._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="estate[title]"
                    value="<%=estate.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="estate[location]"
                    value="<%=estate.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="estate[image]"
                    value="<%=estate.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">estate Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="estate[price]" value="<%=estate.price %>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="estate[description]"><%= estate.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update estate</button>
            </div>
        </form>
        <a href="/estates/<%= estate._id%>">Back To estate</a>

    </div>
</div>